{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@controller/*": ["src/controller/*"],
      "@services/*": ["src/services/*"],
      "@routes/*": ["src/routes/*"],
      "@models/*": ["src/models/*"],
      "@middleware/*": ["src/middleware/*"],
    }
  }
}
